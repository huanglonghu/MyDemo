<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="body"
            type="com.xx.yuefang.bean.QuerryReservationBody" />

    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="36pt"
            android:text="@string/search"
            android:textColor="@color/t8"
            android:textSize="38pt" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1pt"
            android:layout_marginTop="36pt"
            android:layout_marginBottom="39pt"
            android:background="@drawable/divider_c" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80pt"
            android:layout_marginLeft="30pt"
            android:layout_marginRight="30pt"
            android:background="@drawable/bg_search2"
            android:divider="@drawable/divider_c"
            android:padding="1pt"
            android:showDividers="middle">


            <TextView
                android:id="@+id/title"
                android:layout_width="165pt"
                android:layout_height="match_parent"
                android:background="@color/b8"
                android:gravity="center"
                android:textColor="@color/t2"
                android:textSize="28pt" />


            <RelativeLayout
                android:id="@+id/down"
                android:layout_width="78pt"
                android:layout_height="match_parent"
                android:background="@color/divider">

                <ImageView
                    android:layout_width="20pt"
                    android:layout_height="18pt"
                    android:layout_centerInParent="true"
                    android:src="@drawable/down4" />

            </RelativeLayout>


            <EditText
                android:id="@+id/content"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/hint25"
                android:paddingLeft="20pt"
                android:textColorHint="@color/t1"
                android:textSize="28pt" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80pt"
            android:layout_marginLeft="30pt"
            android:layout_marginTop="30pt"
            android:layout_marginRight="30pt">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_search2"
                android:padding="1pt">


                <TextView
                    android:id="@+id/startDate"
                    android:layout_width="232pt"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:hint="@string/selctDate"
                    android:paddingLeft="18pt"
                    android:textSize="28pt" />

                <RelativeLayout
                    android:id="@+id/selectStartDate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/d6">

                    <ImageView
                        android:layout_width="40pt"
                        android:layout_height="40pt"
                        android:layout_centerInParent="true"
                        android:src="@drawable/canlender" />


                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20pt"
                android:layout_marginRight="20pt"
                android:text="@string/to"
                android:textColor="#000"
                android:textSize="23pt" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_search2"
                android:padding="1pt">


                <TextView
                    android:id="@+id/endDate"
                    android:layout_width="232pt"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:hint="@string/selctDate"
                    android:paddingLeft="18pt"
                    android:textSize="28pt" />

                <RelativeLayout
                    android:id="@+id/selectEndDate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/d6">

                    <ImageView
                        android:layout_width="40pt"
                        android:layout_height="40pt"
                        android:layout_centerInParent="true"
                        android:src="@drawable/canlender" />

                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/post"
            android:layout_width="match_parent"
            android:layout_height="100pt"
            android:layout_marginLeft="30pt"
            android:layout_marginTop="160pt"
            android:layout_marginRight="30pt"
            android:background="@drawable/shape1"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="#fff"
            android:textSize="38pt" />


    </LinearLayout>
</layout>