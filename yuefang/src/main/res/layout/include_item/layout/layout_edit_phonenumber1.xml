<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="updateUser"
            type="com.xx.yuefang.bean.UpdateUser" />

        <variable
            name="hint"
            type="String" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{hint}"
            android:textColor="#000"
            android:textSize="13sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal">

            <com.xx.yuefang.ui.customview.MyEditText
                android:id="@+id/yzm"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:background="@drawable/shape23"
                android:hint="@string/hint7"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:textSize="15sp" />



            <TextView
                android:id="@+id/getYzm"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:textSize="26pt"
                android:gravity="center"
                android:background="@drawable/bg_btn_yzm2"
                android:text="@string/fsyzm"
                android:textColor="@drawable/tv_color_selector3" />

        </LinearLayout>


        <Button
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape1"
            android:textSize="31pt"
            android:text="@string/next"
            android:textColor="#fff" />

    </LinearLayout>
</layout>