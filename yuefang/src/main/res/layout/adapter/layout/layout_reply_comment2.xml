<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="bean"
            type="com.xx.yuefang.bean.Comment.PremisesCommentDtosBean" />

        <variable
            name="count"
            type="int" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f0f0f0"
        android:orientation="vertical"
        android:padding="20pt">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{bean.userName}"
            android:textColor="#000"
            android:textSize="26pt" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20pt"
            android:text="@{bean.content}"
            android:textColor="#000"
            android:textSize="30pt" />


        <LinearLayout
            android:id="@+id/lookAllReply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30pt"
            android:clickable="true"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lookAll"
                android:textColor="#999999"
                android:textSize="26pt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{String.valueOf(count)}"
                android:textColor="#999999"
                android:textSize="26pt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/replay3"
                android:textColor="#999999"
                android:textSize="26pt" />

            <ImageView
                android:layout_width="24pt"
                android:layout_height="24pt"
                android:layout_marginLeft="10pt"
                android:background="@drawable/right" />


        </LinearLayout>


    </LinearLayout>
</layout>