<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <data>

        <variable
            name="dataBean"
            type="com.xx.yuefang.bean.FansList.DataBeanX.DataBean" />

    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130pt"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivHead"
            android:layout_width="90pt"
            android:layout_height="90pt" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20pt"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/t2"
                android:text="@{dataBean.nickName}"
                android:textSize="31pt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15pt"
                android:textColor="@color/t1"
                android:text="@{dataBean.phoneNumber}"
                android:textSize="20pt" />


        </LinearLayout>


        <ImageView
            android:layout_width="17pt"
            android:layout_height="28pt"
            android:src="@drawable/back2" />


    </LinearLayout>
</layout>