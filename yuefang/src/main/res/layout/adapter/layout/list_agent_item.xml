<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <variable
            name="dataBean"
            type="com.xx.yuefang.bean.AgentList.DataBean" />


    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="406pt"
        android:orientation="vertical"
        android:paddingLeft="20pt"
        android:paddingRight="20pt">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="102pt"
            android:gravity="center_vertical">


            <ImageView
                android:id="@+id/ivHead"
                android:layout_width="90pt"
                android:layout_height="90pt" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10pt"
                android:gravity="center_vertical"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{dataBean.businessCardName}"
                        android:textColor="@color/t2"
                        android:textSize="24pt" />

                    <TextView
                        android:id="@+id/gradeType"
                        android:layout_width="58pt"
                        android:layout_height="26pt"
                        android:layout_marginLeft="10pt"
                        android:gravity="center"
                        android:text="@{dataBean.gradeType}"
                        android:textColor="#fff"
                        android:textSize="17pt" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10pt"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/dk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/t1"
                        android:textSize="18pt" />

                    <TextView
                        android:id="@+id/cj"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/t1"
                        android:textSize="18pt" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|right">

                <ImageView
                    android:id="@+id/phone"
                    android:layout_width="60pt"
                    android:layout_height="60pt"
                    android:src="@drawable/phone5" />

                <ImageView
                    android:id="@+id/chat"
                    android:layout_width="60pt"
                    android:layout_height="60pt"
                    android:layout_marginLeft="28pt"
                    android:src="@drawable/chat2" />


            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@drawable/divider13" />


        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@drawable/divider_12" />


        <TextView
            android:id="@+id/cancle"
            android:layout_width="138pt"
            android:layout_height="60pt"
            android:layout_gravity="right"
            android:layout_marginTop="20pt"
            android:background="@drawable/bg_3"
            android:clickable="true"
            android:gravity="center"
            android:textColor="#87a1bc"
            android:textSize="24pt" />


    </LinearLayout>
</layout>